<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Principal" >
    
    <ListView
        android:id="@+id/lst_Imagen"
        android:layout_width="match_parent"
        android:layout_height="493dp"
        android:layout_alignBottom="@+id/barra"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/home"
        android:layout_marginTop="10dp"
        tools:listitem="@layout/imagen_visualizador" >
    </ListView>

    <ImageView
        android:id="@+id/fondogris"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="-10dp"
        android:src="@drawable/boton_back" />
    
    <ImageView
        android:id="@+id/barra_neg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-9dp"
        android:src="@drawable/barra_negra" />
    
    <ImageView
        android:id="@+id/boton_closeth"
        android:layout_width="26dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/barra_neg"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="26dp"
        android:src="@drawable/closeth" />

    <ImageView
        android:id="@+id/home"
        android:layout_width="20dp"
        android:layout_height="24dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/home" />
    
    <ImageView
        android:id="@+id/boton_like"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="35dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/home"
        android:src="@drawable/boton_like" />

    <ImageView
        android:id="@+id/boton_dislike"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_alignBottom="@+id/boton_like"
        android:layout_toLeftOf="@+id/boton_closeth"
        android:layout_marginRight="-4dp"
        android:src="@drawable/boton_dislike" />
    
    <ImageView
        android:id="@+id/boton_info"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/boton_info" 
        android:layout_marginBottom="14dp"/>

    <ImageView
        android:id="@+id/barra"
        android:layout_width="wrap_content"
        android:layout_height="13dp"
        android:layout_above="@+id/fondogris"
        android:layout_alignParentLeft="true"
        android:src="@drawable/barra" 
        android:layout_marginBottom="-7dp"/>
    
</RelativeLayout>